<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:extra="http://schemas.android.com/apk/res/com.studySnake.snake">

<RelativeLayout 
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
		<TextView
		 android:id="@+id/mm"
			android:text=""
			android:visibility="visible"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:textColor="#ff8888ff"
			android:textSize="24sp"/>
		
	<com.studySnake.snake.SnakeView
	 android:id="@+id/snake"
		android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mm"
                extra:tileSize="34dp"
                />
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/mm" >
		<TextView
		 android:id="@+id/textA"
			android:text="@string/snake_layout_text_text"
			android:visibility="visible"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:gravity="center_horizontal"
			android:textColor="#ff8888ff"
			android:textSize="24sp"/>
		<TextView
		 android:id="@+id/text"
			android:text="@string/snake_layout_text_text"
			android:visibility="visible"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:gravity="center_horizontal"
			android:textColor="#ff8888ff"
			android:textSize="24sp"/>
	</RelativeLayout>
</RelativeLayout>

<RelativeLayout
        android:id="@+id/bac_dim_lasn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50DC143C"
        android:visibility="gone" >
</RelativeLayout>

<RelativeLayout
        android:id="@+id/bac_dim_lasn_green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#501ac152"
        android:visibility="gone" >
</RelativeLayout>
        
</merge>